{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../build"
    },
    "package": {
        "productName": "jax-ambilight",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": true,
                "open": true,
                "execute": true,
                "sidecar": true,
                "scope": [
                    {
                        "name": "run-touch",
                        "cmd": "touch",
                        "args": [{ "validator": "\\S+" }]
                    }
                ]
            }
        },
        "windows": [
            {
                "title": "desktop",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": false,
            "targets": "all",
            "identifier": "com.praanto.jax.ambilight",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}